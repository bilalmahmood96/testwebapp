                        if (divenable1.style.display == 'none') {
                            divenable1.style.display = 'block';
                        }
                        else {
                            document.getElementById("test1");
                        }
                    }
                    function divcon() {
                        var divenable = document.getElementById("test4");
                        if (divenable.style.display == 'none') {
                            divenable.style.display = 'block';
                        }
                        else {
