                                    }
                                    var strdata = JSON.stringify(obj);
                                    var settings = {
                                        "async": true,
                                        "crossDomain": true,
                                        "url": "http://localhost:58734/api/Create",
                                        "method": "POST",
                                        "headers": {
                                            "Content-Type": "application/json",
                                            "Accept": "*/*",
                                            "Cache-Control": "no-cache",
                                            "cache-control": "no-cache"
                                        },
                                        "processData": false,
                                        "data": strdata
